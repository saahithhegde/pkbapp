<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Owner Name:"
            android:id="@+id/owner_name"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/name"
            android:layout_toRightOf="@+id/owner_name" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Registration Number:"
            android:id="@+id/reg_number"
            android:layout_below="@+id/owner_name" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/reg"
            android:layout_toRightOf="@+id/reg_number"
            android:layout_below="@+id/name"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chassis Number:"
            android:id="@+id/chassis"
            android:layout_below="@+id/reg_number"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/chassis_number"
            android:layout_toRightOf="@+id/chassis"
            android:layout_below="@+id/reg"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Colour:"
            android:id="@+id/colour"
            android:layout_below="@+id/chassis"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/color_value"
            android:layout_toRightOf="@+id/colour"
            android:layout_below="@+id/chassis_number"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/colour"
            android:id="@+id/address"
            android:text="Owner Address:" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/address_value"
            android:layout_toRightOf="@+id/address"
            android:layout_below="@+id/color_value"/>
    </RelativeLayout>
</androidx.cardview.widget.CardView>